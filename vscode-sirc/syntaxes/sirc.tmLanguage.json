{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "SIRC Assembly",
  "patterns": [
    {
      "include": "#constants"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    }
  ],
  "repository": {
    "constants": {
      "patterns": [
        {
          "name": "constant.numeric.bin.sirc",
          "match": "(?<!\\w)#0b[0-1_]+\\b"
        },
        {
          "name": "constant.numeric.hex.sirc",
          "match": "(?<!\\w)#0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.decimal.sirc",
          "match": "(?<!\\w)#(\\+|\\-)?[0-9_]+\\b"
        },
        {
          "name": "constant.language.register.sirc",
          "match": "\\b(r1|r2|r3|r4|r5|r6|r7|lh|ll|ah|al|ph|pl|sh|sl|sr|a|p|s)\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.language.placeholder.sirc",
          "match": "(?<!\\w)(\\$[a-zA-Z0-9_]+)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "match": "\\b(ADDI|ADCI|SUBI|SBCI|ANDI|ORRI|XORI|CMPI|TSAI|TSXI|COPI|ADDR|ADCR|SUBR|SBCR|ANDR|ORRR|XORR|CMPR|TSAR|TSXR|COPR|BRAN|BRSR|RETS|NOOP|WAIT|RETE|LDEA|LJMP|LJSR|LOAD|STOR|SHFT|EXCP|RSET|ETFR|ETTR)(\\[([SANsan])\\])?(\\|(AL|==|!=|CS|CC|NS|NC|OS|OC|HI|LO|>=|<<|>>|<=|NV))?(?!\\w)",
          "captures": {
            "1": { "name": "keyword.control.mnemonic.sirc" },
            "2": { "name": "keyword.control.status-override.sirc" },
            "3": { "name": "constant.language.status-override-type.sirc" },
            "4": { "name": "keyword.control.condition.sirc" },
            "5": { "name": "constant.language.condition-type.sirc" }
          }
        },
        {
          "name": "keyword.control.shift-definition.sirc",
          "match": "(NUL|LSL|LSR|ASL|ASR|RTL|RTR)"
        },
        {
          "name": "keyword.control.indirect-addressing.sirc",
          "begin": "\\(",
          "end": "\\)",
          "patterns": [
            {
              "include": "#constants"
            }
          ]
        },
        {
          "name": "keyword.other.directive.sirc",
          "match": "(?<!\\w)(\\.EQU|\\.DQ|\\.DW|\\.DB|\\.ORG)\\b"
        },
        {
          "name": "entity.name.function.sirc",
          "match": "(?<!\\w)(:[a-zA-Z0-9_]+)\\b"
        },
        {
          "name": "variable.parameter.symbol-reference.sirc",
          "match": "(?<!\\w)(@[a-zA-Z0-9_]+)(\\.r|u|l)?\\b"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.sirc",
      "begin": "\"",
      "end": "\""
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.sirc",
          "match": "(\\s)*;.*$"
        }
      ]
    }
  },
  "scopeName": "source.sirc-asm"
}
